# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/										ApplicationController.index
GET		/jobShow/{id}							ApplicationController.jobShow
GET		/jobDescription/{id}					ApplicationController.jobDescription

#Employeee Page
GET		/employee_login							EmployeeController.login
GET		/employee_home							EmployeeController.index
GET		/post_job								EmployeeController.postJob
GET		/cv_pool								EmployeeController.cvPool
GET		/employee_profile						EmployeeController.profile
GET		/employee_settings						EmployeeController.settings
GET		/list_jobs								EmployeeController.listJobs
GET		/new_job								EmployeeController.newJob

#Applicant Page
GET		/applicant_signup						ApplicantController.signup
GET		/applicant_login						ApplicantController.login
POST	/applicant_save							ApplicantController.save
	
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
